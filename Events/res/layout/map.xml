<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:id="@+id/container">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/settings"
        android:visibility="visible"
        android:paddingTop="60dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CPHnow Settings"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <TableRow android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Parties:"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_weight="1"
                />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switchParty"
                android:textOn="Yes"
                android:textOff="No"
                android:checked="true"

                />

        </TableRow>

        <TableRow android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Markets:"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_weight="1"
                />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switchMarket"
                android:textOn="Yes"
                android:textOff="No"
                android:checked="true"
                />

        </TableRow>


            <TableRow android:paddingTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show Action:"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/switchAction"
                    android:textOn="Yes"
                    android:textOff="No"
                    android:checked="true"
                    />

            </TableRow>


            <TableRow android:paddingTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show Shows:"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/switchShow"
                    android:textOn="Yes"
                    android:textOff="No"
                    android:checked="true"
                    />

            </TableRow>

            <TableRow android:paddingTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max Distance:"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_weight="4"
                    />

                <Spinner
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:id="@+id/eventSettingsDistance"
                    />

            </TableRow>
        <TableRow android:paddingTop="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="List events for:"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_weight="4"
                />


            <Spinner
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:id="@+id/eventSettingsDays"
                />

        </TableRow>



            <TableRow android:layout_width="fill_parent">
                <Button
                style="@style/button_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_button_text"
                android:background="@drawable/register_button"
                android:textColor="#fff"
                android:onClick="toggleSettings"
                    android:layout_weight="1"/>
            </TableRow>
        </TableLayout>


    </LinearLayout>


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    
</LinearLayout>