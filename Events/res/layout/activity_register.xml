<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.events.Register">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:contentDescription="CPHnow"
        android:src="@drawable/logo_wide"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_your_desired_username_"
        android:id="@+id/textView"
        android:layout_marginTop="55dp"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Username"
        android:text=""
        android:textSize="26dp"
        android:maxLength="16"
        android:ems="10"
        android:id="@+id/strUsername"
        android:gravity="center"
        android:textColor="#000000"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890-_"
        android:layout_below="@+id/textView"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        />
    <Button
        style="@style/button_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/register_button"
        android:text="Register now!"
        android:textColor="#fff"
        android:id="@+id/doRegisterUser"
        android:onClick="doRegisterUser"
        android:layout_below="@+id/strUsername"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
